    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Firefox (localhost:8080)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            
            
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome (localhost:8080)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "userDataDir": "${workspaceFolder}/.vscode/chrome-profile",
            "internalConsoleOptions": "openOnSessionStart"
        },
        // {
